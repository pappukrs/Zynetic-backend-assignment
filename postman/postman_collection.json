              "host": ["{{base_url}}"],
              "path": ["v1", "status", "meter", "METER-001"]
            }
          }
        },
        {
          "name": "Get Vehicle Status",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/v1/status/vehicle/VEH-001",
